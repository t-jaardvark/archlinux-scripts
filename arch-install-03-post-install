# Cinnamon Settings
gsettings set org.cinnamon number-workspaces 10

# Install/Configure Geany
sudo pacman -S geany
pushd $HOME/.config/geany/colorschemes
wget "https://raw.github.com/geany/geany-themes/master/colorschemes/kary-pro-colors-dark.conf"
popd

# install play for timer applet on cinnamon
sudo pacman -Sy sox

# install AM
https://github.com/ivan-hc/AM

# install misc packages
sudo pacman --noconfirm -S flameshot kitty signal-desktop libreoffice-fresh virtualbox-host-dkms

